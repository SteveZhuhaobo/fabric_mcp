# Production Environment Configuration
# Microsoft Fabric Lakehouse MCP Server

# Required: Microsoft Fabric Configuration
FABRIC_WORKSPACE_ID=${FABRIC_WORKSPACE_ID}
FABRIC_LAKEHOUSE_ID=${FABRIC_LAKEHOUSE_ID}
FABRIC_TENANT_ID=${FABRIC_TENANT_ID}

# Authentication Configuration
FABRIC_AUTH_METHOD=managed_identity

# Production Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/fabric-lakehouse-mcp/server.log
STRUCTURED_LOGGING=true

# Production Limits
MAX_QUERY_TIMEOUT=600
MAX_RESULT_ROWS=50000
ENABLE_WRITE_OPERATIONS=true

# Production Retry Configuration
RETRY_ATTEMPTS=5
RETRY_BACKOFF_FACTOR=2.0