# Microsoft Fabric Lakehouse MCP Server Configuration Template
# Copy this file to .env and fill in your actual values

# Required: Microsoft Fabric Configuration
FABRIC_WORKSPACE_ID=your-workspace-id-here
FABRIC_LAKEHOUSE_ID=your-lakehouse-id-here
FABRIC_TENANT_ID=your-azure-tenant-id-here

# Authentication Configuration
# Choose one authentication method: service_principal, managed_identity, or interactive
FABRIC_AUTH_METHOD=service_principal

# Service Principal Authentication (required if using service_principal method)
FABRIC_CLIENT_ID=your-client-id-here
FABRIC_CLIENT_SECRET=your-client-secret-here

# Optional: Server Configuration
# Logging configuration
LOG_LEVEL=INFO
# LOG_FILE=/path/to/logfile.log

# Query and operation limits
FABRIC_MAX_QUERY_TIMEOUT=300
FABRIC_MAX_RESULT_ROWS=10000
FABRIC_ENABLE_WRITE_OPERATIONS=true

# Query execution and formatting options
FABRIC_DEFAULT_PAGE_SIZE=1000
FABRIC_ENABLE_PAGINATION=true
FABRIC_ENABLE_QUERY_CANCELLATION=true
FABRIC_RESULT_FORMAT=structured
FABRIC_INCLUDE_RESULT_METADATA=true

# Advanced Configuration
FABRIC_RETRY_ATTEMPTS=3
FABRIC_RETRY_BACKOFF_FACTOR=2.0
STRUCTURED_LOGGING=false

# Development/Testing Configuration
# Uncomment for development environments
# LOG_LEVEL=DEBUG
# STRUCTURED_LOGGING=true